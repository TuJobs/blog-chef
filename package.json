    "@prisma/client": "^6.13.0",
    "@supabase/supabase-js": "^2.55.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "lucide-react": "^0.539.0",
    "mongoose": "^8.17.1",
    "multer": "^2.0.2",
    "next": "15.4.6",
    "next-auth": "^5.0.0-beta.29",
    "pg": "^8.16.3",
    "prisma": "^6.13.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "sharp": "^0.34.3",
    "sqlite": "^5.1.1",
