{
  "name": "blog_chef",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "dev:turbo": "next dev --turbopack",
    "build": "next build",
    "build:docker": "BUILD_STANDALONE=true next build",
    "start": "next start -p 3000",
    "start:production": "NODE_ENV=production next start -p 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "db:init": "node -e \"console.log('Database initialized')\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node scripts/seed.js",
    "migrate:cloud": "./migrate-to-cloud.sh",
    "docker:build": "docker build -t blog-chef .",
    "docker:run": "docker run -p 3000:3000 blog-chef",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy:vercel": "vercel --prod",
    "deploy:build": "npm run build && npm run start:production"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
